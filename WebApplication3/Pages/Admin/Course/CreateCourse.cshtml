@page
@model WebApplication3.Pages.Admin.Course.CreateCourseModel
@{
    ViewData["Title"] = "Создать курс";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="CourseInput.title"></label>
        <input asp-for="CourseInput.title" class="form-control" />
        <span asp-validation-for="CourseInput.title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseInput.Description"></label>
        <textarea asp-for="CourseInput.Description" class="form-control"></textarea>
        <span asp-validation-for="CourseInput.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseInput.Price"></label>
        <input asp-for="CourseInput.Price" class="form-control" />
        <span asp-validation-for="CourseInput.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseInput.Discount"></label>
        <input asp-for="CourseInput.Discount" class="form-control" />
        <span asp-validation-for="CourseInput.Discount" class="text-danger"></span>
    </div>


    <div class="form-group">
        <h4>Введите Категории через запятую</h4>
        <input type="text"
               asp-for="CourseInput.NewCategoriesInput"
               class="form-control"
               placeholder="Введите через запятую" />
    </div>


    <button type="submit" class="btn btn-primary">Создать курс</button>
</form>


}