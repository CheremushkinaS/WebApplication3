@page
@model WebApplication3.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Управление пользователями";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>@ViewData["Title"]</h3>
        <a asp-page="UserCreate" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>Создать пользователя
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Имя</th>
                            <th>Email</th>
                            <th>Роль</th>
                            <th class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-primary">@user.Role.name</span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a asp-page="./UserEdit"
                                           asp-route-id="@user.Id"
                                           class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Редактировать
                                        </a>

                                        <a asp-page="./UserDetails"
                                           asp-route-id="@user.Id"
                                           class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Просмотр
                                        </a>

                                        <form method="post"
                                              asp-page="./UserDelete"
                                              asp-route-id="@user.Id"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Удалить пользователя?')">
                                                <i class="bi bi-trash"></i> Удалить
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Users.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4">
                                    <i class="bi bi-people fs-1 text-muted"></i>
                                    <p class="mt-2">Пользователи не найдены</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

