@page
@model WebApplication3.Pages.Admin.DetailsModel
@{
    ViewData["Title"] = "User Details";
    Layout = "_AdminLayout"; // Используем общий макет
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>User Details</h4>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-page="./Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">@Model.User.Name</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.User.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Name)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.User.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>

                <dt class="col-sm-3 text-muted">Password</dt>
                <dd class="col-sm-9 text-muted">••••••••</dd>

                <dt class="col-sm-3 text-muted">User Role</dt>
                <dd class="col-sm-9">
                   
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <small class="text-muted">User ID: #@Model.User.Id</small>
        </div>
    </div>
</div>