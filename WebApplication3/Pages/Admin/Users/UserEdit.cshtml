@page
@model WebApplication3.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Создание пользователя";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-plus me-2"></i>Создание нового пользователя</h4>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="User.Name" class="form-label">ФИО</label>
                            <input asp-for="User.Name" class="form-control" placeholder="Введите полное имя" required>
                            <span asp-validation-for="User.Name" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="User.Email" class="form-label">Email</label>
                            <input asp-for="User.Email" type="email" class="form-control" placeholder="example@domain.com" required>
                            <span asp-validation-for="User.Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="User.Password" class="form-label">Пароль</label>
                            <input asp-for="User.Password" type="password" class="form-control" placeholder="Не менее 6 символов" required>
                            <span asp-validation-for="User.Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="User.RoleId" class="form-label">Роль</label>
                            <select asp-for="User.RoleId" asp-items="Model.Roles" class="form-select" required>
                                <option value="">Выберите роль</option>
                            </select>
                            <span asp-validation-for="User.RoleId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Назад к списку
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
